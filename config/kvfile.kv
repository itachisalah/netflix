        Button:
            size_hint: None,None
            size: 140 ,50
            pos_hint:{'center_x':0.3, 'center_y':0.43}
            text: '+ Informtion'
            blod: True
            color:1,1,1,1
            background_color: 0,0,0,0.4
            background_normal: app.roundborder
