<NetflixHome>:
    FloatLayout:
        ScrollView:
            id : scroll_home
            size_hint: 1, 0.88
            pos_hint:{'center_y':0.44}
            bar_width:10
            scroll_wheel_distance: 40
            scroll_type: ['bars', 'content']
            effect_cls: ScrollEffect
            BoxLayout:
                id :content
                orientation: 'vertical'
                size_hint:1, None
                height: self.minimum_height
                padding: 22, 0, 22, 10
                canvas:
                    Color:
                        rgba: 0.15, 0.15,0.15,0.9
                    Rectangle:
                        size: self.size
                        pos:self.pos

        MenuHeader


<ResultPage>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.15, 0.15,0.15,0.9
            Rectangle:
                size: self.size
                pos:self.pos
        Label:
            id: searchtext
            font_size: 28
            size_hint: None,None
            size: self.texture_size
            pos_hint:{'center_y':0.83}
        ScrollView:
            id :scroll_result
            size_hint : 1, 0.88
            pos_hint:{'center_y':0.35}
            bar_width: 10
            scroll_wheel_distance: 40
            scroll_type: ['bars', 'content']
            effect_cls: ScrollEffect
            StackLayout:
                id : stack
                spacing: 10
                padding: 30,0,22,50
                size_hint : 1,None
                height:self.minimum_height +30
                pos_hint:{'center_y':0.35}










